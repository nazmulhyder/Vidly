@model IEnumerable<Vidly.Models.Customer>
@{
              
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>
<div>
    
    <a href="~/Customers/New/">
        <button class="btn btn-primary" style="margin-bottom: 15px">add customer</button>
    </a>

</div>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Customers</th>
            <th>Membership Type</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr>
                <td>There is no customer yet!</td>
            </tr>
        }
        else
        {
            foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.Id }, null)
                    </td>
                    <td>
                        @customer.MembershipType.Name
                    </td>

                </tr>

            }


        }

    </tbody>
</table>
